{
  "name": "www-parse-english",
  "private": true,
  "license": "MIT",
  "repository": "wooorm/parse-english",
  "bugs": "https://github.com/wooorm/parse-english/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "devDependencies": {
    "browserify": "^17.0.0",
    "cssnano": "^4.0.0",
    "parse-english": "^4.0.0",
    "postcss-cli": "^8.0.0",
    "postcss-preset-env": "^6.0.0",
    "prettier": "^2.0.0",
    "rehype-cli": "^10.0.0",
    "rehype-preset-minify": "^5.0.0",
    "rehype-prevent-favicon-request": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^21.0.0",
    "tinyify": "^3.0.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix && stylelint src/index.css --fix",
    "build:js": "browserify src -p tinyify -o dest/index.js",
    "build:css": "postcss src/index.css -o dest/index.css",
    "build:html": "rehype -u preset-minify -u prevent-favicon-request src -o dest",
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "test": "npm run format && npm run build"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "unicorn/prefer-dom-node-append": "off",
      "unicorn/prefer-dom-node-remove": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "postcss": {
    "plugins": {
      "postcss-preset-env": {},
      "cssnano": {
        "preset": "default"
      }
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
